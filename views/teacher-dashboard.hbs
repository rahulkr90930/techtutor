<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <!-- Logout Option -->
    <div class="logout-option" style="position: absolute; top: 20px; left: 20px;">
        <a href="/logout" style="text-decoration: none; color: red;">Logout</a>
    </div>

    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <!-- Sidebar with options -->
        <div class="sidebar">
            <ul>
                <li><a href="#current-students">Students Currently Teaching</a></li>
                <li><a href="#new-offers">New Offers</a></li>
                <li><a href="#update-profile">Update Profile</a></li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Section: Current Students -->
            <section id="current-students">
                <h2>Students Currently Teaching</h2>
                <div class="students-list">
                    <div class="student-card">
                        <img src="https://via.placeholder.com/150" alt="Student Image">
                        <div class="student-info">
                            <h3>Student Name</h3>
                            <p>Course: Math</p>
                            <p>Time: 10 AM - 11 AM</p>
                        </div>
                    </div>
                    <!-- Add more student cards as needed -->
                </div>
            </section>

            <!-- Section: New Offers -->
            <section id="new-offers">
                <h2>New Offers</h2>
                <div class="offers-list">
                    <div class="offer-card">
                        <img src="https://via.placeholder.com/150" alt="Offer Image">
                        <div class="offer-info">
                            <h3>Offer Title</h3>
                            <p>Description of the offer here.</p>
                            <button>Accept Offer</button>
                        </div>
                    </div>
                    <!-- Add more offer cards as needed -->
                </div>
            </section>

            <!-- Section: Update Profile -->
            <section id="update-profile">
                <h2>Update Profile</h2>
                <form id="update-form">
                    <label for="phone">Phone:</label>
                    <input type="text" id="phone" name="phone" placeholder="Enter new phone number">

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Enter new email">

                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" placeholder="Enter new address">

                    <label for="price">Price per hour:</label>
                    <input type="text" id="price" name="price" placeholder="Enter new price">

                    <label for="timing">Available Timing:</label>
                    <input type="text" id="timing" name="timing" placeholder="Enter available timing">

                    <button type="submit">Update Profile</button>
                </form>
            </section>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
