<div class="form-container">
    <h3>Teacher Login</h3>
    <form id="teacher-login-form" action="/teacher-login" method="POST">
        <label for="teacher-email">Email:</label>
        <input type="email" id="teacher-email" name="email" required>

        <label for="teacher-password">Password:</label>
        <input type="password" id="teacher-password" name="password" required>

        <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/teacher-signup">Sign Up</a></p>
</div>
